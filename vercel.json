{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "CI=false npm install && CI=false npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ],
  "functions": {
    "api/**": {
      "excludeFiles": [
        "**/*.pdf",
        "**/*.md",
        "**/__pycache__/**",
        "**/*.pyc",
        "frontend/**",
        "*.log",
        ".git/**",
        "*.sh",
        "*.bat"
      ]
    }
  }
}
